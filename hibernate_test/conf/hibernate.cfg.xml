<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- mysql数据库驱动 -->
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <!-- mysql数据库名称 -->
        <property name="hibernate.connection.url">jdbc:oracle:thin:@149.12.130.97:1521:tci</property>
        <!-- 数据库的登陆用户名 -->
        <property name="hibernate.connection.username">tci</property>
        <!-- 数据库的登陆密码 -->
        <property name="hibernate.connection.password">tci</property>
        <!-- 方言：为每一种数据库提供适配器，方便转换 -->
        <!--<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>-->

        <mapping resource="com/Customer.hbm.xml"/>
        <mapping resource="com/Order.hbm.xml"/>

    </session-factory>
</hibernate-configuration>