<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.model.User" table="t_user">
            <id name="id" column="c_id">
                    <generator class="increment"></generator>
            </id>

            <property name="name" column="c_name" type="string"></property>
            <property name="password" column="c_password" type="string"></property>
            <property name="selfIntroduction" column="c_introduction" type="string"></property>
            <property name="loginTime" column="c_login_time" type="date"></property>





    </class>

</hibernate-mapping>